{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Market 974 !{% endblock %}

{% block content %}
    <h2>Je passe ma commande</h2>
    <p>Choissisez vos préférence avant de passer votre commande sur Market 974 !</p>
    <hr>

    <div class="row">
        <div class="col-md-6 product-item">
            {% set formHtml %}
                {{ form_start(form, {'action':path('app_order_recap')}) }}
                {{ form_label(form.addresses, 'Choissez votre adresse de livraison') }}
                <a href="{{ path('app_add_address') }}">Ajouter une nouvelle adresse</a>
                {{ form_end(form) }}
            {% endset %}
            {{ formHtml | replace ({'[br]' : '<br/>'}) | raw }}
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Récap de ma commande</b>
            </div>
            <div class="order-summary">
                {% for product in cart %}
                    <div class="row mt-3">
                        <div class="col-3">
                            <img src="{{ product.product.illustration }}" alt="{{ product.product.name }}"
                                 height="75px" style="border: 1px solid darkblue">
                        </div>
                        <div class="col-7 my-auto">
                            {{ product.product.name }}
                        </div>
                        <div class="col-2 my-auto">
                            x {{ product.quantity }}
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}
